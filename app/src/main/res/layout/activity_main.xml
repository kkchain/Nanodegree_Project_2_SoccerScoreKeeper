<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/soccer"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="@dimen/Home_LW"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/home"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_header" />

                <TextView
                    android:id="@+id/goalTeamAScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/zero"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_header"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/team_a_goal_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.8"
                        android:background="@color/grey"
                        android:text="@string/goal"
                        android:textSize="@dimen/button_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/team_a_foul_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.8"
                        android:background="@color/grey"
                        android:text="@string/foul"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/foulTeamAScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:background="#BDBDBD"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/team_a_yellow_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.7"
                        android:background="@color/yellow"
                        android:text="@string/yellow_card"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/yellowTeamAScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:background="@color/yellow"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/team_a_red_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.7"
                        android:background="@color/red"
                        android:text="@string/red_card"
                        android:textSize="@dimen/button_text_size" />

                    <TextView
                        android:id="@+id/redTeamAScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:background="@color/red"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="@dimen/guest_LW"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/guest"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_header" />

                <TextView
                    android:id="@+id/goalTeamBScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/zero"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_header"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/team_b_goal_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.8"
                        android:background="@color/grey"
                        android:text="@string/goal"
                        android:textSize="@dimen/button_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/foulTeamBScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:layout_marginRight="@dimen/score_LM_Right"
                        android:background="@color/grey"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/team_b_foul_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.8"
                        android:background="@color/grey"
                        android:text="@string/foul"
                        android:textSize="@dimen/button_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/yellowTeamBScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:layout_marginRight="@dimen/score_LM_Right"
                        android:background="@color/yellow"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/team_b_yellow_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.7"
                        android:background="@color/yellow"
                        android:text="@string/yellow_card"
                        android:textSize="@dimen/button_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/redTeamBScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/A_LM_left"
                        android:layout_marginRight="@dimen/score_LM_Right"
                        android:background="@color/red"
                        android:text="@string/zero"
                        android:textAllCaps="true"
                        android:textSize="@dimen/score_text_size"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/team_b_red_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/button_LM"
                        android:alpha="0.7"
                        android:background="@color/red"
                        android:text="@string/red_card"
                        android:textSize="@dimen/button_text_size" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/button_LM"
            android:alpha="0.8"
            android:background="@color/grey"
            android:text="@string/reset"
            android:textSize="@dimen/button_text_size" />


    </LinearLayout>
</ScrollView>